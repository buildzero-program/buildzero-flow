# When adding additional environment variables, the schema in "/src/env.js"
# should be updated accordingly.

# Database - Neon PostgreSQL
# IMPORTANT: Use different branches for prod/dev
# Production: Configure in Vercel (main branch)
# Development: Copy this to .env.local and use development branch
DATABASE_URL="postgresql://user:password@ep-xxx.neon.tech/dbname?sslmode=require"

# QStash - Upstash
QSTASH_TOKEN="your_qstash_token_here"

# Vercel URL (automático em produção, use localhost:3000 em dev)
VERCEL_URL="localhost:3000"

# ClickUp Integration
CLICKUP_API_KEY="your_clickup_api_key_here"

# Avatar API (Email to Profile Picture)
AVATAR_API_USERNAME="your_avatar_api_username"
AVATAR_API_PASSWORD="your_avatar_api_password"

# Evolution API (WhatsApp)
EVOLUTION_API_URL="https://evo.buildzero.ai"
EVOLUTION_API_KEY="your_evolution_api_key"
EVOLUTION_INSTANCE_NAME="your_instance_name"

# Meta Pixel / Conversions API (Workflow Pedro Paulinetti - Stripe to Meta Pixel)
META_PIXEL_ID="your_pixel_id_here"
META_ACCESS_TOKEN="your_meta_access_token_here"
